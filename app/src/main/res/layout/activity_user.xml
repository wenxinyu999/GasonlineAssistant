<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userdata.UserActivity"
    android:orientation="vertical"
    android:background="#E6E6FA"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/user_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"

            />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:orientation="horizontal"
    android:layout_marginTop="13dp"
    >
    <TextView
        android:id="@+id/tv_accedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="账号修改"
        android:textSize="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/iv_accedit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/go"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_passwordedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="密码修改"
            android:textSize="23dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_passwordedit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/go"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_usernameedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="用户名修改"
            android:textSize="23dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_usernameedit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/go"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/user_counttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="记账情况"
            android:textSize="23dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/user_countiv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/go"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#000000"
        />
    <Button
        android:id="@+id/user_exit"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_button"
       android:layout_gravity="center"
        android:text="退出登录"
        android:textSize="23dp"
        android:textColor="#ffffff"
        android:layout_marginTop="130dp"
        />
</LinearLayout>