<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userdata.CountActivity"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/count_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型："
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <RadioGroup
            android:id="@+id/count_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >
            <RadioButton
                android:id="@+id/rb_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油耗"
                android:textSize="18dp"
                android:checked="true"
                />
<!--            <RadioButton-->
<!--                android:id="@+id/rb_in"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="收入"-->

<!--                android:textSize="18dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                />-->
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额填写："
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入金额"
            android:textSize="18dp"
            android:textColor="#000000"
            android:ems="11"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程填写："
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/et_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入行驶里程"
                android:textSize="18dp"
                android:textColor="#000000"
                android:ems="11"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加油量填写："
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/et_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入加油量"
                android:textSize="18dp"
                android:textColor="#000000"
                android:ems="10"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/count_remark"
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:background="@drawable/shape_edittext"
            android:layout_marginLeft="13dp"
            android:gravity="top"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/count_sure"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="23dp"
            />
    </LinearLayout>
</LinearLayout>